<?xml version="1.0" encoding="utf-8" ?>
<views:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="MySteps.Views.MyFormPopup"
             Color="Transparent">
    
    <Border BackgroundColor="White" Padding="20" StrokeShape="{RoundRectangle CornerRadius=15}">
        <VerticalStackLayout Spacing="15" WidthRequest="300">
            <Label Text="Enter Details" FontSize="Medium" HorizontalOptions="Center" />
            
            <Entry Placeholder="Name" />
            <Entry Placeholder="Email" Keyboard="Email" />
            
            <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
            <Button Text="Cancel" Clicked="OnCancelButtonClicked" BackgroundColor="Gray" />
        </VerticalStackLayout>
    </Border>
</views:Popup>