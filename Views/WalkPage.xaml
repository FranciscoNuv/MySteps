<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MySteps.ViewModels"
             x:Class="MySteps.Views.WalkPage"
             x:DataType="vm:WalkViewModel"
             Title="Walk">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="10">
        <Label Text="Date:" Grid.Row="0" />
        <Label Text="Duration:" Grid.Row="1" />
        <Label Text="Distance:" Grid.Row="2" />
        <Label Text="Avg Speed:" Margin="0,0,5,0" Grid.Row="3" />
        <Label Text="Max Pace:" Margin="0,0,5,0" Grid.Row="4" />

        <Label Text="{Binding Date}" Grid.Row="0" Grid.Column="1" />
        <Label Text="{Binding Duration}" Grid.Row="1" Grid.Column="1" />
        <Label Text="{Binding Distance}" Grid.Row="2" Grid.Column="1" />
        <Label Text="{Binding AvgSpeed}" Grid.Row="3" Grid.Column="1" />
        <Label Text="{Binding MaxPace}" Grid.Row="4" Grid.Column="1" />
    </Grid>
</ContentPage>